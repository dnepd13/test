<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="boardreply">
	<insert id="insert" parameterType="boardReplyDto">
		insert into board_reply values(board_reply_seq.nextval, #{board_no}, #{user_no}, #{reply_content}, to_date(sysdate, 'YYYY-MM-DD'))
	</insert>
	
	<select id="select" parameterType="int" resultType="boardReplyDto">
		select * from board_reply where board_no = #{board_no}
	</select>
</mapper>





